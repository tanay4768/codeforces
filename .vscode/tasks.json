{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and run",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "copy",
        "\"${file}\"",
        "${workspaceFolder}\\Codeforces.java", // Replace 'Codeforces' with your Codeforces class name
        "&&",
        "javac",
        "Codeforces.java",
        "&&",
        "java",
        "Codeforces",
        "<",
        "input.txt",
        ">",
        "output.txt",
        "&&",
        "del",
        "Codeforces.class",
        "&&",
        "del",
        "Codeforces.java"
      ],
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "java",
        "fileLocation": [
          "relative",
          "${workspaceRoot}"
        ],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    }
  ]
}
